<div class = "form-data">
    <form action="<%= `/courses/${course._id}/update?_method=PUT` %>" method="POST">
    <label for="txtTitle">Course Title</label>
    <input type = "text" name = "title" id = "txtTitle" autofocus required value="<%=course.title%>">
    <label for = "txtDesc">Email Address</label>
    <input type="text" name="desc" id="txtDesc" required value="<%=course.description%>">
    <label for="txtStudents">Max Students</label>
    <input type="text" name="maxStudents" id="txtStudents" required value="<%=course.maxStudents%>">
    <label for="txtCost">Cost</label>
    <input type="text" name="cost" id="txtCost" required value="<%=course.cost%>">
    <button type="submit">Save</button>
    </form>
</div>